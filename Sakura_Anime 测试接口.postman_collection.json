					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// 标签数组\r",
									"const tags = [\"日系\", \"美剧\", \"治愈\", \"寒蝉\", \"新海诚\"];\r",
									"\r",
									"// 随机选1到3个标签\r",
									"const tagCount = Math.floor(Math.random() * 3) + 1; // 1 或 3\r",
									"const selectedTags = [];\r",
									"\r",
									"while (selectedTags.length < tagCount) {\r",
									"    const randomTag = tags[Math.floor(Math.random() * tags.length)];\r",
									"    if (!selectedTags.includes(randomTag)) {\r",
									"        selectedTags.push(randomTag);\r",
									"    }\r",
									"}\r",
									"\r",
									"// 构造随机 page 和 size 参数\r",
									"const randomPage = Math.floor(Math.random() * 5) + 1; // 1 到 5\r",
									"const randomSize = Math.floor(Math.random() * 30) + 1; // 1 到 30\r",
									"\r",
									"// 构造完整的 URL\r",
									"const baseURL = \"http://localhost:8080/api/anime/getAnimeListByTags\";\r",
									"const tagParams = selectedTags.map(tag => `tag=${encodeURIComponent(tag)}`).join(\"&\");\r",
									"const fullURL = `${baseURL}?${tagParams}&page=${randomPage}&size=${randomSize}`;\r",
									"\r",
									"// 更新请求 URL\r",
									"pm.request.url = fullURL;\r",
									"\r",
									"console.log(\"Generated URL:\", fullURL);\r",
									""
								],
